- if book_review.like_user(current_user.id)
  = button_to book_review_like_path(1, book_review_id: book_review.id), method: :delete, id: "like-button", remote: true do 
    = image_tag "i_flu_y.png", class: "like-icony", width: "10", height: "10"
    = book_review.likes_count
- else 
  = button_to book_review_likes_path(book_review), method: :post, id: "like-button", remote: true do 
    = image_tag "i_flu_g.png", class: "like-icong", width: "10", height: "10"
    = book_review.likes_count